{
    "name": "glance-project/alice-membership-api",
    "description": "ALICE Membership REST API",
    "type": "project",
    "license": "proprietary",
    "autoload": {
        "psr-4": {
            "Alice\\Membership\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Alice\\Membership\\Test\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "Mario Gunter Simao",
            "email": "mario.simao@cern.ch"
        }
    ],
    "scripts": {
      "test:ci": "phpunit tests --configuration phpunit.xml --coverage-text --colors=never --log-junit reports/phpunit.xml",
      "test:coverage-html": "phpunit tests --configuration phpunit.xml --coverage-html dist",
      "test:unit": "phpunit tests --configuration phpunit.xml"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.5",
        "squizlabs/php_codesniffer": "^3.6",
        "vimeo/psalm": "^4.23",
        "psalm/plugin-phpunit": "^0.16.1"
    },
    "require": {
        "glance-project/cors-middleware": "^0.1.0",
        "glance-project/keycloak-middleware": "^0.3.0",
        "glance-project/error-middleware": "^0.3.0",
        "glance-project/authorization-service": "^0.9.0",
        "glance-project/photo-service": "^1.0",
        "glance-project/preg-service": "^1.1",
        "glance-project/search-service": "dev-master",
        "psr/http-message": "^1.0",
        "psr/container": "1",
        "psr/simple-cache": "^1.0",
        "slim/slim": "^4.8",
        "php-di/php-di": "^6.1",
        "vlucas/phpdotenv": "^4.1",
        "monolog/monolog": "^2.6",
        "phpmailer/phpmailer": "^6.6",
        "twig/twig": "^3.4",
        "sentry/sdk": "^3.1",
        "doctrine/dbal": "^2.13",
        "doctrine/migrations": "^3.0",
        "symfony/console": "^5.4",
        "symfony/event-dispatcher": "^5.4",
        "phpfastcache/phpfastcache": "^8.1"
    },
    "config": {
        "allow-plugins": {
            "php-http/discovery": true
        }
    },
    "repositories": [
        {
            "type": "vcs",
            "url": "https://gitlab.cern.ch/lhcb-fence/search-service.git"
        }
    ]
}
